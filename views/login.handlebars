<div class="holder">

  <div class="header">
    <p>Login Information</p>
  </div>

  <form class="createCredentials row justify-content-center">

    <div class="form-group first animated fadeInLeft col-8">
      <label for="userName">User Name</label>
      <input class="form-control" type="text" name="userName" id="user">
    </div>

    <div class="form-group second animated fadeInRight col-8">
      <label for="passWord">Password</label>
      <input class="form-control" name="passWord" type="password" id="pass"></input>
    </div>

    <div class="col-sm-4">
      <button id="loginButton" class="btn animated fadeInUp" type="button" name="button">Submit</button>
    </div>

    <div class="col-sm-4">
      <button id="userButton" class="btn animated fadeInUp" type="button" name="button">Create new Account</button>
    </div>

  </form>

  <div class="row justify-content-center">
      <div class="col-sm-4">
        <button id="continueButton" class="btn animated fadeInUp" type="button" name="button">Continue as Guest</button>
      </div>
    </div>

</div>

{{#each scripts}}
  <script type="text/javascript" src="{{script}}"></script>
{{/each}}