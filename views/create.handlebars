      <div class="form-group second animated fadeInUp">
        <label id="label3" for="tournamentSelect">Tournament Size</label>
        <select name="tournamentSel" class="form-control" id="tournamentSelect">
          <option>4</option>
          <option>8</option>
          <option>16</option>
          <option>32</option>
          <option>64</option>
