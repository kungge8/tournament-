  <div class="sidebar-inner">


    <div class="header">
      <p>Creation Panel</p>
    </div>

    <form class="createCredentials">

      <div class="form-group first animated fadeInUp">
        <label id="label1" for="tournamentName">Tournament Name</label>
        <input class="form-control" type="text" name="tournamentName">
      </div>

      <div class="form-group first animated fadeInUp">
        <label id="label2" for="tournamentName">Tournament Description</label>
        <input class="form-control" type="text" name="tournamentDesc">
